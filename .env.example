# API密钥配置
DEEPSEEK_API_KEY=your_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# 数据库配置
DATABASE_URL=sqlite:///./data/chinese_paintings.db

# 服务器配置
HOST=127.0.0.1
PORT=8000
DEBUG=True

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 文件上传配置
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.json

# 缓存配置
CACHE_ENABLED=True
CACHE_TIMEOUT=3600  # 1小时 